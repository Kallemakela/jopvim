{
  "title": "Right Command Layer Switching",
  "rules": [
    {
      "description": "Right Command + A → base layer, Right Command + S → symbol layer",
      "manipulators": [

        {
          "type": "basic",
          "from": { "key_code": "a", "modifiers": { "mandatory": ["right_command"] } },
          "to": [
            { "set_variable": { "name": "symbols_layer", "value": 0 } }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "s", "modifiers": { "mandatory": ["right_command"] } },
          "to": [
            { "set_variable": { "name": "symbols_layer", "value": 1 } }
          ]
        },

        {
          "type": "basic",
          "from": { "key_code": "h" },
          "to": [ { "key_code": "left_arrow" } ],
          "conditions": [
            { "type": "variable_if", "name": "symbols_layer", "value": 1 }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "j" },
          "to": [ { "key_code": "down_arrow" } ],
          "conditions": [
            { "type": "variable_if", "name": "symbols_layer", "value": 1 }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "k" },
          "to": [ { "key_code": "up_arrow" } ],
          "conditions": [
            { "type": "variable_if", "name": "symbols_layer", "value": 1 }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "l" },
          "to": [ { "key_code": "right_arrow" } ],
          "conditions": [
            { "type": "variable_if", "name": "symbols_layer", "value": 1 }
          ]
        }

      ]
    }
  ]
}

