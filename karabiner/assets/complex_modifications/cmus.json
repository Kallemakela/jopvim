{
  "title": "cmus media keys",
  "rules": [
    {
      "description": "Map media keys to cmus-remote",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "f8" },
          "to": [
            { "shell_command": "/usr/local/bin/cmus-remote --pause" }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "f9" },
          "to": [
            { "shell_command": "/usr/local/bin/cmus-remote --next" }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "f7" },
          "to": [
            { "shell_command": "/usr/local/bin/cmus-remote --prev" }
          ]
        }
      ]
    }
  ]
}

